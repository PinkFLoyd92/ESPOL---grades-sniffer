<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dip"
            android:isScrollContainer="true"
            android:id="@+id/tabla_notas_estudiante">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dip"
                android:background="@color/material_deep_teal_500">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materia"
                    android:padding="42dip" android:background="#5bb3d6"
                    android:textColor="#000"
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:layout_marginRight="@dimen/pad_5dp"
                    android:id="@+id/header_materia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parcial"
                    android:padding="42dip" android:background="#5bb3d6"
                    android:textColor="#000"
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:layout_marginRight="@dimen/pad_5dp"
                    android:id="@+id/header_nota1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final"
                    android:id="@+id/header_nota2"
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:layout_marginRight="@dimen/pad_5dp"
                    android:padding="42dip" android:background="#5bb3d6"
                    android:textColor="#000"   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mej."
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:layout_marginRight="@dimen/pad_5dp"
                    android:padding="42dip" android:background="#5bb3d6"
                    android:textColor="#000"
                    android:id="@+id/header_nota3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vez"
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:layout_marginRight="@dimen/pad_5dp"
                    android:padding="42dip" android:background="#5bb3d6"
                    android:textColor="#000"
                    android:id="@+id/header_vezTomada" />

            </TableRow>
        </TableLayout>
    </HorizontalScrollView>
</ScrollView>

